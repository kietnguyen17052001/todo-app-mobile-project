<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".view.Home">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_myday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFD2"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_today_24"
                android:layout_marginLeft="10dp"
                ></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="25sp"
                android:text="My day"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_important"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFCFDF"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:layout_below="@id/cv_myday">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_baseline_notification_important_24"
                android:layout_marginLeft="10dp"
                ></ImageView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textSize="25sp"
                android:text="Important"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:layout_marginLeft="12dp"
                android:layout_gravity="center_vertical"
                ></TextView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_task_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cv_important"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        ></androidx.recyclerview.widget.RecyclerView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_add_task"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="25dp"
        android:backgroundTint="@color/blue_light"
        android:src="@drawable/ic_baseline_add_24"
        ></com.google.android.material.floatingactionbutton.FloatingActionButton>

</RelativeLayout>